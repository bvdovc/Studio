<project name="Symmetrix System Viewer Build"  xmlns:ant="antlib:net.sf.antcontrib">
	
	<taskdef resource="net/sf/antcontrib/antlib.xml" uri="http://ant-contrib.sourceforge.net">
        <classpath>
                <pathelement location="${ANT_CONTRIB}"/>
        </classpath>
    </taskdef>   
	
	<tstamp>
        <format property="current.time" pattern="MM-dd-yyyy_hh-mm-ss"/>
    </tstamp>

	<tstamp>
      <format property="touch.time" pattern="MM/dd/yyyy hh:mm aa"
              offset="-3" unit="day"/>
	</tstamp>
	
	<target name="deleteBIN">
		<delete includeemptydirs="true">
			<fileset dir="SymmetrixVMobile/bin" >
				<date datetime="${touch.time}" when="before"/>
			</fileset>
		</delete>	
	</target>	
		

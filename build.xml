	<import file="${CTRL_NAME}/build.xml" as="ctrlbuild"/>
	<import file="${HELPER_NAME}/build.xml" as="iconbuild"/>
	
    <target name="createBin">
		<echo>----------------------------------------------</echo>
		<ant:if>
			<not>
				<available file="${APP_BIN}" type="dir" />
			</not>	
			<then>
			    <echo message="Creating application bin..." />
				<mkdir dir="${APP_BIN}" /> 
			</then>
		</ant:if>
		<mkdir dir="${APP_BIN}/${current.time}" /> 	
		<antcall target="deleteBIN"/>
	</target>
	

	<target name="copyAssets">
		<echo>----------------------------------------------</echo>
		<echo message="Copying application assets..." />
		<mkdir dir="${APP_BIN}/${current.time}/images" />
		<mkdir dir="${APP_BIN}/${current.time}/xmlProperties"/>

		<copy todir="${APP_BIN}/${current.time}/images/properties">
			<fileset dir="${APP_ASSETS}/images/properties" />
		</copy>
		<copy todir="${APP_BIN}/${current.time}/images" file="${APP_ASSETS}/images/symIntro.jpg"/>
		<copy todir="${APP_BIN}/${current.time}/xmlProperties">
			<fileset dir="${APP_SRC}/xmlProperties" />
		</copy>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/appIcon72.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/appIcon114.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/appIcon128.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/appIcon76.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/appIcon152.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/Default-Landscape@2x.png"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/SymmetrixVMobile-app.xml"/>
		<copy todir="${APP_BIN}/${current.time}" file="${APP_SRC}/settings.xml"/>
					
		<echo message="Application assets copied..."/>
	</target>
	
	<target name="swfMobile">
		<echo>----------------------------------------------</echo>
		<echo message="Starting compilation SymmetrixVMobile..." />
		<mxmlc file="${APP_SRC}/${APP_NAME}.${APP_EXTENSION}"
			output="${APP_BIN}/${current.time}/${APP_NAME}.swf" 
			static-rsls="true"
			accessible="true"
			configname="airmobile" 
			debug="${DEBUG_FLAG}" 
			failonerror="true" 
			fork="true" 
			maxmemory="1024m">
			<arg line="-locale=en_US,de_DE,it_IT,ja_JP,es_MX,pt_BR,ko_KR,ru_RU,zh_CN,fr_FR"/>	
			<arg line="-source-path+='${APP_LOCALES}/{locale}'"/>
			<arg line="-source-path+='${APP_ASSETS}'"/>
			<arg line="-define+=OS::desktop,false"/>
			<arg line="-define+=INCLUDE::unified,true"/>
			<arg line="-define+=SERIES::m_series,false"/>
			<arg line="-define+=SERIES::k_series,true"/>
			<source-path path-element="${APP_SRC}" />
			<external-library-path file="${FLEX_HOME}/frameworks/libs/air/airglobal.swc" append="true" />
			<library-path dir="${MODEL_BIN}" includes="*.swc" append="true" />
			<library-path dir="${CONFIG_BIN}" includes="*.swc" append="true" />
			<library-path dir="${CTRL_BIN}" includes="*.swc" append="true" />
			<library-path dir="${HELPER_BIN}" includes="*.swc" append="true" />
		</mxmlc>
		<echo message="Compilation SymmetrixVMobile (mobile version) finished successfully." />
		<echo>----------------------------------------------</echo>
	</target>


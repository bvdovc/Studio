<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.VScrollBar")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import spark.skins.spark.HScrollBarTrackSkin;
			import spark.skins.spark.HSliderThumbSkin;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="inactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=incrementButton, type=spark.components.Button, required=false
	name=track, type=spark.components.Button, required=false
	name=thumb, type=spark.components.Button, required=false
	name=decrementButton, type=spark.components.Button, required=false
	-->
	
	<s:Button id="track"
			  left="0"
			  right="0"
			  top="0"
			  bottom="0"
			  height="100%"
			  width="100%"
			  alpha="0"
			  focusEnabled="false"
			  skinClass="spark.skins.spark.HScrollBarTrackSkin"/>
	
	<s:Button id="thumb"
			  left="0"
			  right="0"
			  top="0"
			  bottom="0"
			  minHeight="45"
			  maxHeight="45"
			  height="45"
			  width="10"
			  focusEnabled="false"
			  skinClass="spark.skins.spark.HSliderThumbSkin"/>
	
</s:Skin>

<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   styleName="toolBar"
				   width="100%"
				   height="100%">
		
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[			
			import spark.layouts.HorizontalAlign;
			
			[Inspectable(category="General", enumeration="left,right", defaultValue="left")]
			[Bindable]
			/**
			 * The horizontal alignment of the content relative to the container's width.
			 */
			public var horizontalAlign:String = HorizontalAlign.LEFT;
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:HorizontalLayout horizontalAlign="{horizontalAlign}"/>
	</s:layout>
